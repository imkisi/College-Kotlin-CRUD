<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.College" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="H1">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="fontWeight">600</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="H2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="fontWeight">500</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="H3">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorOutline</item>
        <item name="fontWeight">400</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="primaryBtn">
        <item name="android:layout_height">48dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="Theme.College" parent="Base.Theme.College" />
</resources>