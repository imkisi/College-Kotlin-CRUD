<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#FAFAFA"
    app:cardCornerRadius="28dp"
    android:layout_marginVertical="4dp"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="18dp">

        <TextView
            android:id="@+id/sName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/H1"
            android:text="Student Name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/sID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/H3"
            android:text="Student ID"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sName"/>

        <TextView
            android:id="@+id/sClass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/H2"
            android:text="Student Name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sID"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:cardBackgroundColor="#EEEEEE"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sClass"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                
                <Button
                    android:id="@+id/editBtn"
                    android:layout_width="163dp"
                    android:layout_height="match_parent"
                    android:backgroundTint="#1D46FF"
                    style="@style/primaryBtn"
                    android:textColor="#FFFFFF"
                    android:text="Edit" />

                <Button
                    android:id="@+id/deleteBtn"
                    android:layout_width="163dp"
                    android:layout_height="match_parent"
                    android:backgroundTint="@android:color/transparent"
                    android:textColor="#FF2929"
                    style="@style/primaryBtn"
                    android:text="Delete" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>